[
  {
    "name": "api",
    "image": "${api_image}",
    "command": ["python", "manage.py", "migrate"],
    "cpu": 200,
    "memory": 200,
    "essential": true,
    "portMappings": [
      {
        "containerPort": 8000,
        "hostPort": 0,
        "protocol": "tcp"
      }
    ],
    "environment": [
      {
        "name": "DJANGO_DB_NAME",
        "value": "${database_name}"
      },
      {
        "name": "DJANGO_DB_USER",
        "value": "${database_username}"
      },
      {
        "name": "DJANGO_DB_PASSWORD",
        "value": "${database_password}"
      },
      {
        "name": "DJANGO_DB_HOST",
        "value": "${database_host}"
      },
      {
        "name": "DJANGO_DB_PORT",
        "value": "5432"
      },
      {
        "name": "DJANGO_ENV",
        "value": "${django_env}"
      },
      {
        "name": "DJANGO_SECRET_KEY",
        "value": "${django_secret_key}"
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${log_group}",
        "awslogs-region": "${region}",
        "awslogs-stream-prefix": "db_migrate"
      }
    }
  }
]
